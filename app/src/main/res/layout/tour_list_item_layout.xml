<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    app:cardCornerRadius="20dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal"
        android:weightSum="6"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:id="@+id/tourListImageViewId"
            android:src="@drawable/tour_icon"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="7"
            android:padding="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="6"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5.25"
                    android:text="Tour Name: "
                    android:textAllCaps="true"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:id="@+id/tour_name_on_layout"
                    />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".75"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:id="@+id/tour_delete_button_id"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:id="@+id/tour_destination_id"
                android:text="Destination:"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="From date:"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:id="@+id/tour_from_date_id"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="To date:"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:id="@+id/tour_to_date_id"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Balance left:"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:id="@+id/tour_balance_left_id"
                />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="@style/MyProgressBar"
                android:progress="30"
                android:id="@+id/tour_budget_progressbarId"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Edit Date"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:id="@+id/tour_edit_buttonId"
                    android:src="@drawable/ic_mode_edit_black_24dp"

                        />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Add Spend"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:id="@+id/tour_add_expense"
                    android:src="@drawable/ic_add_black_24dp"

                    />



            </LinearLayout>












        </LinearLayout>








    </LinearLayout>

</androidx.cardview.widget.CardView>