<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.badoualy.datepicker.DatePickerTimeline
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calender_date_picker_timeline_id"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calender_date_picker_timeline_id"
        android:id="@+id/calender_list_id"

        >


    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Activity Found"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/calender_date_picker_timeline_id"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:id="@+id/no_calender_activity_text"
        />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/no_calender_activity_text"
        android:id="@+id/no_calender_activity_image"
        android:src="@drawable/search_gif"
        android:visibility="gone"

        />



    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/floating_calender_go_to_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="30dp"
        android:background="@android:color/transparent"
        app:fab_colorNormal="@color/colorPrimary"
        android:src="@drawable/ic_today_black_24dp"
        app:fabSize="mini"
        app:fab_label="Go Today" />


</RelativeLayout>